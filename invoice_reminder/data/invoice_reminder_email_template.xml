<?xml version="1.0"?>
<odoo>
    <data noupdate="1">
        <!--Email template -->
        <record id="invoice_reminder_email_template" model="mail.template">
            <field name="name">Payment Reminder</field>
            <field name="model_id" ref="account.move"/>
            <field name="email_from"><t t-esc="object.invoice_user_id.email"/></field>
            <field name="partner_to"><t t-esc="object.partner_id.email"/></field>
            <field name="subject">Reminder: Please complete payment</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px;">Dear <t t-esc="object.partner_id.name or 'valued customer'"/>,<br /></p>
                    <p>Our records indicate that you have an outstanding balance for <t t-esc="format_amount(object.amount_residual, object.currency_id) or 'past invoices'"/>.<br /></p>
                    <p>Please take necessary action to settle this amount as soon as possible. You can access your pending invoice(s) via this link:<br /></p>
                    <!-- Here you should insert the link to the invoice if available -->
                    <p><a href="<t t-esc="object.access_url"/>">View Invoice</a><br /></p>
                    <p>Sincerely,<br/><t t-esc="object.invoice_user_id.name"/><br /></p>
                </div>
            </field>
            <field name="lang"><t t-esc="object.lang"/></field>
            <field name="auto_delete" eval="False"/>
        </record>
    </data>
</odoo>

